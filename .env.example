PORT=3000
NODE_ENV=development
DATABASE_URL=postgresql://user:password@localhost:5432/chatbot
REDIS_URL=redis://localhost:6379
JWT_SECRET=your-jwt-secret-min-32-chars
JWT_EXPIRES_IN=8h
OPENAI_API_KEY=sk-...
ANTHROPIC_API_KEY=sk-ant-...
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com
AZURE_OPENAI_API_KEY=...
AZURE_OPENAI_DEPLOYMENT=gpt-4
DEFAULT_MODEL=gpt-4-turbo-preview
DEFAULT_PROVIDER=openai
LOG_LEVEL=info
CORS_ORIGIN=*
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=100

# ─── Discord Integration ─────────────────────────────────────────────────────
# From https://discord.com/developers/applications → Your App → General Information
DISCORD_PUBLIC_KEY=your-discord-app-public-key
DISCORD_APPLICATION_ID=your-discord-application-id
DISCORD_BOT_TOKEN=Bot your-discord-bot-token
# The tenant ID that owns this Discord bot
DISCORD_TENANT_ID=your-tenant-uuid

# ─── Slack Integration ───────────────────────────────────────────────────────
# From https://api.slack.com/apps → Your App → Basic Information → App Credentials
SLACK_SIGNING_SECRET=your-slack-signing-secret
# From OAuth & Permissions → Bot User OAuth Token
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
SLACK_TENANT_ID=your-tenant-uuid

# ─── Telegram Integration ────────────────────────────────────────────────────
# Token from @BotFather → /newbot
TELEGRAM_BOT_TOKEN=123456789:ABCdef...
TELEGRAM_TENANT_ID=your-tenant-uuid

# ─── Microsoft Teams Integration ─────────────────────────────────────────────
# From Azure Bot Service → Configuration
TEAMS_APP_ID=your-azure-bot-app-id
TEAMS_APP_PASSWORD=your-azure-bot-app-password
TEAMS_TENANT_ID=your-tenant-uuid

# ─── WhatsApp Business API ────────────────────────────────────────────────────
# From Meta for Developers → WhatsApp → API Setup
WHATSAPP_VERIFY_TOKEN=your-custom-verify-token
WHATSAPP_ACCESS_TOKEN=your-whatsapp-access-token
WHATSAPP_PHONE_NUMBER_ID=your-phone-number-id
WHATSAPP_TENANT_ID=your-tenant-uuid
